# Zo Computer API Key (get from https://zo.computer Settings > API & MCP)
ZO_API_KEY=your_zo_api_key_here

# Z.AI API Key (get from https://z.ai)
ZAI_API_KEY=your_zai_api_key_here

# Authentication (REQUIRED for public deployments)
# Leave empty/commented for local development without authentication
# Set these when deploying as a public Zo Computer service
AUTH_USERNAME=admin
AUTH_PASSWORD=

# Server Configuration
PORT=3001
# NODE_ENV: Set to 'development' for local dev, 'production' for deployed environments
# - development: More verbose logging, detailed error messages, CORS enabled
# - production: Optimized logging, sanitized errors, better performance
NODE_ENV=production


# Model Configuration
MODEL_NAME=glm-4.7

# API Endpoints
ZO_MCP_URL=https://api.zo.computer/mcp
ZAI_API_URL=https://api.z.ai/api/coding/paas/v4

# Database Configuration
# DB_PATH defaults to backend/data/zo_chat.db (relative to project)
# DB_PATH=/custom/path/zo_chat.db

# Context Compression Configuration
# COMPRESSION_THRESHOLD: Token count at which automatic compression triggers (default: 100000)
COMPRESSION_THRESHOLD=100000
# COMPRESSION_KEEP_RECENT: Number of recent messages to keep uncompressed (default: 5)
COMPRESSION_KEEP_RECENT=5

# Memory Management Configuration
# CONVERSATION_TTL_HOURS: Hours of inactivity before conversations are cleaned from memory (default: 24)
CONVERSATION_TTL_HOURS=24
